{% extends 'base.html.twig' %}

{% block title %}Détails de la sortie | Sortie.com{% endblock %}

{% block body %}
     <h3>{{ sortie.nom }}</h3>
     <h3>{{ sortie.dateHeureDebut|date('d/m/Y') }}</h3>
     <h3>{{ sortie.duree }}</h3>
     <h3>{{ sortie.dateLimiteInscription|date('j M Y h:i') }}</h3>
     <h3>{{ sortie.nbInscriptionMax }}</h3>
     <h3>{{ sortie.descriptionInfos }}</h3>
     <h3>{{ sortie.organisateur }}</h3>
     <h3>{{ sortie.lieu }}</h3>
     <h1>{{ sortie.etatsortie }}</h1>
     <h3>{{ sortie.campus }}</h3>

     {% if (btnDesinscrire == true) %}
          <a href="{{ path('inscrire',{'id': sortie.id}) }}"><button>Se désinscrire</button></a>
     {% else %}
          <a href="{{ path('inscrire',{'id': sortie.id}) }}"><button>S'inscrire</button></a>
     {% endif %}
{% endblock %}


