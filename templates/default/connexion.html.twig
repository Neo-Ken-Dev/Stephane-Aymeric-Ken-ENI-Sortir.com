        <form method="post" id="connexionForm" class="formConnexion">
            <img src="{{ asset("img/avatar.png") }}" alt="">
            <h2>Connexion</h2>

            <div class="input-group">
                <label for="loginUser">Identifiant :</label>
                <input type="text" name="_username" id="loginUser">
            </div>

            <div class="input-group">
                <label for="loginPassword">Mot de passe :</label>
                <input type="password" name="_password" id="loginPassword">
            </div>

            <button type="submit" class="submit-btn">Connexion</button>

            <div class="input-group group-checkbox">
                <label for="checkbox1">
                    <input id="checkbox1" type="checkbox" role="checkbox" name="_remember_me"/><span class="custom">Se souvenir de moi</span>
                </label>
            </div>

            <a href="{{ path('app_forgot_password_request') }}"> Mot de passe oubli√© </a>

        </form>
    </div>

{% endblock %}