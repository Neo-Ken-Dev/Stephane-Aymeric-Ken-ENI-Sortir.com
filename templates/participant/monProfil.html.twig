{% extends 'base.html.twig' %}

{% block title %}Votre profil!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    {{ form_start(formulaireGestionProfil) }}
    {% if user.photo %}
        <img src="{{ asset('uploads/photo_profil/'~user.photo)}}" class="photo_de_profil" alt="photo profil">
    {% else %}
        <img src="{{ asset('img/avatar.png')}}" class="photo_de_profil" alt="photo profil">
    {% endif %}
    <div class="container container_formulaireGestionProfil">
    <div class="formulaireGestionProfil">{{ form_widget(formulaireGestionProfil) }}</div>
        <div class="div-btn-profil-form">
        <button class="btn-gestion-profil" type="submit">Enregistrer</button>
        <input type="button" value="Annuler" class="btn-gestion-profil">
        </div>
    {{ form_end(formulaireGestionProfil) }}

    </div>
{% endblock %}
